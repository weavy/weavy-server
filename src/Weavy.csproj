<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <Description>ASP.NET Core MVC application for hosting Weavy server/backend services.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <SatelliteResourceLanguages>none</SatelliteResourceLanguages>
    <TargetFramework>net7.0-windows</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Weavy.Api" Version="18.0.0" />
    <PackageReference Include="Weavy.Core" Version="18.0.0" />
    <PackageReference Include="Weavy.Admin" Version="18.0.0" />
    <PackageReference Include="Weavy.Dropin" Version="18.0.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.NewtonsoftJson" Version="7.0.11" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="7.0.11" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="blobs\**" />
    <Content Remove="blobs\**" />
    <EmbeddedResource Remove="blobs\**" />
    <None Remove="blobs\**" />

    <Compile Remove="cache\**" />
    <Content Remove="cache\**" />
    <EmbeddedResource Remove="cache\**" />
    <None Remove="cache\**" />

    <Compile Remove="index\**" />
    <Content Remove="index\**" />
    <EmbeddedResource Remove="index\**" />
    <None Remove="index\**" />

    <Compile Remove="logs\**" />
    <Content Remove="logs\**" />
    <EmbeddedResource Remove="logs\**" />
    <None Remove="logs\**" />

    <Compile Remove="mail\**" />
    <Content Remove="mail\**" />
    <EmbeddedResource Remove="mail\**" />
    <None Remove="mail\**" />

    <None Include="po\**" CopyToOutputDirectory="PreserveNewest" />

    <Compile Remove="temp\**" />
    <Content Remove="temp\**" />
    <EmbeddedResource Remove="temp\**" />
    <None Remove="temp\**" />
  </ItemGroup>

  
</Project>
