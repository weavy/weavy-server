<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <Description>ASP.NET Core MVC application for hosting Weavy server/backend services.</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <SatelliteResourceLanguages>none</SatelliteResourceLanguages>
    <TargetFramework>net8.0-windows</TargetFramework>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Weavy.Api" Version="23.3.0" />
    <PackageReference Include="Weavy.Core" Version="23.3.0" />
    <PackageReference Include="Weavy.Admin" Version="23.3.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Razor.RuntimeCompilation" Version="8.0.5" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="blobs\**" />
    <Content Remove="blobs\**" />
    <EmbeddedResource Remove="blobs\**" />
    <None Remove="blobs\**" />

    <Compile Remove="cache\**" />
    <Content Remove="cache\**" />
    <EmbeddedResource Remove="cache\**" />
    <None Remove="cache\**" />

    <Compile Remove="index\**" />
    <Content Remove="index\**" />
    <EmbeddedResource Remove="index\**" />
    <None Remove="index\**" />

    <Compile Remove="logs\**" />
    <Content Remove="logs\**" />
    <EmbeddedResource Remove="logs\**" />
    <None Remove="logs\**" />

    <Compile Remove="temp\**" />
    <Content Remove="temp\**" />
    <EmbeddedResource Remove="temp\**" />
    <None Remove="temp\**" />
  </ItemGroup>

</Project>
